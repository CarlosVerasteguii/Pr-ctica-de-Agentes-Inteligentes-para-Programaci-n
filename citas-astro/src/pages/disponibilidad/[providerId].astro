---
import MainLayout from '../../layouts/MainLayout.astro';
import CalendarView from '../../components/CalendarView';
import { supabase } from '../../lib/supabase';

export const prerender = false; // SSR is required for dynamic availability

const { providerId } = Astro.params;

if (!providerId) {
  return Astro.redirect('/');
}

// Fetch doctor details
const { data: doctor, error: doctorError } = await supabase
  .from('doctors')
  .select('*')
  .eq('id', providerId)
  .single();

if (doctorError || !doctor) {
  return Astro.redirect('/404');
}

// Fetch existing appointments for this doctor to show availability
// In a real app, you might want to filter by date range (e.g., current month)
const { data: appointments, error: apptError } = await supabase
  .from('appointments')
  .select('start_time, status')
  .eq('doctor_id', providerId)
  .eq('status', 'confirmed');

// Transform appointments for the calendar
const calendarEvents = appointments?.map(appt => {
    const start = new Date(appt.start_time);
    const end = new Date(start.getTime() + 60 * 60 * 1000); // Assume 1 hour duration
    return {
        start: start,
        end: end,
        title: 'OCUPADO'
    };
}) || [];

---

<MainLayout title={`Agenda: ${doctor.name} | Citas Astro`}>
  <div class="max-w-7xl mx-auto">
    <a href="/" class="inline-flex items-center text-secondary hover:text-primary mb-8 transition-colors group font-mono text-sm uppercase tracking-wider">
      <span class="mr-2 text-accent">&lt;</span> VOLVER AL DIRECTORIO
    </a>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
      {/* Doctor Info Sidebar */}
      <aside class="lg:col-span-4">
        <div class="bg-background border border-border p-8 sticky top-24">
          <div class="mb-8 pb-8 border-b border-border">
             <div class="font-mono text-xs text-secondary mb-2">PERFIL PROFESIONAL</div>
             <h1 class="text-4xl font-display font-bold text-primary tracking-tight leading-none mb-2">{doctor.name}</h1>
             <div class="inline-block px-2 py-1 bg-surface border border-border font-mono text-xs text-accent uppercase">
                {doctor.specialty}
             </div>
          </div>
          
          <div class="mb-8">
            <div class="font-mono text-xs text-secondary mb-2">BIOGRAFÍA</div>
            <div class="flex items-center gap-2 mb-4">
                <span class="w-3 h-3 bg-green-500 rounded-none"></span>
                <span class="font-mono text-sm text-primary">CONSULTA ACTIVA</span>
            </div>
            <div class="font-mono text-sm text-secondary leading-relaxed">
                {doctor.bio}
            </div>
          </div>

          <div class="pt-6 border-t border-border">
            <div class="font-mono text-xs text-secondary mb-4">DETALLES DE ATENCIÓN</div>
            <ul class="font-mono text-sm text-primary space-y-4">
              <li class="flex justify-between">
                <span>DURACIÓN</span>
                <span class="text-secondary">60 MIN</span>
              </li>
              <li class="flex justify-between">
                <span>CONSULTORIO</span>
                <span class="text-secondary">#304</span>
              </li>
              <li class="flex justify-between">
                <span>CANCELACIÓN</span>
                <span class="text-secondary">24H ANTES</span>
              </li>
            </ul>
          </div>
        </div>
      </aside>

      {/* Calendar Area */}
      <div class="lg:col-span-8">
        <div class="border border-border bg-surface p-8 h-full relative">
            <div class="absolute top-0 left-0 w-full h-1 bg-primary"></div>
            <h2 class="font-mono text-sm text-secondary mb-8 uppercase tracking-widest flex items-center gap-4">
                <span class="w-4 h-4 border border-accent flex items-center justify-center text-[10px] text-accent">+</span>
                SELECCIONE UN HORARIO
            </h2>
            <CalendarView 
                client:load 
                doctorId={doctor.id} 
                initialAppointments={calendarEvents} 
            />
        </div>
      </div>
    </div>
  </div>
</MainLayout>
