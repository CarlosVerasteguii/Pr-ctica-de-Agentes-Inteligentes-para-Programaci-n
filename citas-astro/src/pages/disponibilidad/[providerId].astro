---
import MainLayout from '../../layouts/MainLayout.astro';
import CalendarView from '../../components/CalendarView';
import { supabase } from '../../lib/supabase';

export const prerender = false; // SSR is required for dynamic availability

const { providerId } = Astro.params;

if (!providerId) {
  return Astro.redirect('/');
}

// Fetch doctor details
const { data: doctor, error: doctorError } = await supabase
  .from('doctors')
  .select('*')
  .eq('id', providerId)
  .single();

if (doctorError || !doctor) {
  return Astro.redirect('/404');
}

// Fetch existing appointments for this doctor to show availability
// In a real app, you might want to filter by date range (e.g., current month)
const { data: appointments, error: apptError } = await supabase
  .from('appointments')
  .select('start_time, status')
  .eq('doctor_id', providerId)
  .eq('status', 'confirmed');

// Transform appointments for the calendar
const calendarEvents = appointments?.map(appt => {
    const start = new Date(appt.start_time);
    const end = new Date(start.getTime() + 60 * 60 * 1000); // Assume 1 hour duration
    return {
        start: start,
        end: end,
        title: 'Ocupado'
    };
}) || [];

