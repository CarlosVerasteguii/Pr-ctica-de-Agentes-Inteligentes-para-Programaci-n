---
import MainLayout from '../layouts/MainLayout.astro';
import { supabase } from '../lib/supabase';

interface Doctor {
  id: string;
  name: string;
  specialty: string;
  bio: string;
  image_url: string | null;
}

const { data: doctors, error } = await supabase
  .from('doctors')
  .select('*')
  .order('name');

if (error) {
  console.error('Error fetching doctors:', error);
}
---

<MainLayout title="Doctores Disponibles | Citas Astro">
  <section class="max-w-7xl mx-auto mb-24 pt-12">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 items-end border-b border-border pb-12">
      <div class="lg:col-span-7">
        <h1 class="text-6xl md:text-8xl font-display font-bold text-primary mb-8 tracking-tighter leading-none">
          GESTIÓN<br/>MÉDICA
        </h1>
        <p class="font-mono text-secondary text-lg max-w-2xl leading-relaxed">
          > SISTEMA DE RESERVAS CLÍNICAS<br/>
          > SELECCIONE UN ESPECIALISTA<br/>
          <span class="text-accent">>> AGENDA ABIERTA</span>
        </p>
      </div>
      <div class="lg:col-span-5 flex justify-end">
         <div class="w-full h-48 bg-surface border border-border p-4 font-mono text-xs text-secondary overflow-hidden relative shadow-brutal">
            <div class="absolute top-2 right-2 flex gap-2">
                <div class="w-3 h-3 rounded-full bg-red-500"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                <div class="w-3 h-3 rounded-full bg-green-500"></div>
            </div>
            <p class="mb-2">Estado del Servicio Médico</p>
            <p class="text-green-600">● Operativo</p>
            <p>Clínica: Central</p>
            <p>Especialistas: Disponibles</p>
            <p>Guardia: Activa</p>
            <div class="mt-4 text-primary">
                <span class="animate-pulse">_</span>
            </div>
         </div>
      </div>
    </div>
  </section>

  <section class="max-w-7xl mx-auto">
    <div class="flex justify-between items-center mb-8">
        <h2 class="font-mono text-sm text-secondary uppercase tracking-widest">Especialistas Disponibles</h2>
        <div class="h-px bg-border flex-grow ml-8"></div>
    </div>

    {error && (
      <div class="bg-red-50 border border-red-200 p-4 mb-8 font-mono text-sm text-red-700" role="alert">
        <p class="font-bold">ERROR DE CONEXIÓN</p>
        <p>No se pudieron cargar los doctores.</p>
      </div>
    )}

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-px bg-border border border-border">
      {doctors?.map((doctor) => (
        <article class="bg-background p-8 hover:bg-surface transition-colors duration-200 group relative flex flex-col h-full">
            <div class="absolute top-0 left-0 w-full h-1 bg-accent transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
            
            <header class="flex justify-between items-start mb-6">
                <div class="font-mono text-xs text-secondary">
                    MAT: {doctor.id.slice(0, 8).toUpperCase()}
                </div>
                <div class="flex items-center gap-2">
                    <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
                    <span class="font-mono text-xs text-primary">DISPONIBLE</span>
                </div>
            </header>

            <div class="mb-6 flex-grow">
                <h3 class="font-display font-bold text-2xl text-primary mb-2 group-hover:text-accent transition-colors">
                    {doctor.name}
                </h3>
                <span class="inline-block px-2 py-1 bg-surface border border-border font-mono text-xs text-secondary uppercase">
                    {doctor.specialty}
                </span>
            </div>

            <div class="font-mono text-sm text-secondary mb-8 h-20 overflow-hidden relative">
                <p class="line-clamp-3">
                    {doctor.bio || 'Especialista certificado con amplia experiencia en el tratamiento de pacientes.'}
                </p>
                <div class="absolute bottom-0 left-0 w-full h-8 bg-gradient-to-t from-background to-transparent group-hover:from-surface transition-colors"></div>
            </div>

            <a href={`/disponibilidad/${doctor.id}`} class="block w-full py-3 border border-primary text-center font-mono text-sm text-primary hover:bg-accent hover:text-white hover:border-accent transition-all duration-200 uppercase tracking-wider mt-auto">
                Ver Agenda
            </a>
        </article>
      ))}
    </div>

    {doctors?.length === 0 && (
      <div class="text-center py-20 border border-border border-dashed">
        <p class="font-mono text-secondary">No hay doctores disponibles.</p>
      </div>
    )}
  </section>
</MainLayout>
